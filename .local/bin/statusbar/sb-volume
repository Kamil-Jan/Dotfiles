#!/bin/sh

# Prints the current volume or ðŸ”‡ if muted.

case $BUTTON in
    1) pamixer -t ;;
    3) notify-send "ðŸ”Š Volume module
- Shows current volume
- Left click to toggle mute" ;;
    6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

[ $(pamixer --get-mute) = true ] && echo ðŸ”‡ && exit

vol="$(pamixer --get-volume)"

if [ "$vol" -gt "70" ]; then
	icon="ðŸ”Š"
elif [ "$vol" -lt "30" ]; then
	icon="ðŸ”ˆ"
else
	icon="ðŸ”‰"
fi

echo "$icon $vol%"
