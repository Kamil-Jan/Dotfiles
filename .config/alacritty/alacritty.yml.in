# Colors
colors:
  # Default colors
  primary:
    background: %clbg%
    foreground: %clfg%

  # Colors the cursor will use if `custom_cursor_colors` is true
  cursor:
    text: '0x000000'
    cursor: '0xffffff'

  # Normal colors
  normal:
    black:   %cl0%
    red:     %cl1%
    green:   %cl2%
    yellow:  %cl3%
    blue:    %cl4%
    magenta: %cl5%
    cyan:    %cl6%
    white:   %cl7%

  # Bright colors
  bright:
    black:   %cl8%
    red:     %cl9%
    green:   %cl10%
    yellow:  %cl11%
    blue:    %cl12%
    magenta: %cl13%
    cyan:    %cl14%
    white:   %cl15%

font:
  size: 10

  normal:
    family: Noto Mono
    style: Regular

  bold:
    family: Noto Mono

  italic:
    family: Noto Mono

# key_bindings
key_bindings:
    - { key: K, mods: Alt, action: ScrollLineUp }
    - { key: J, mods: Alt, action: ScrollLineDown }

background_opacity: 0.9

